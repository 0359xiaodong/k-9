<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panel="http://schemas.android.com/apk/res/com.fsck.k9"
    xmlns:app="http://schemas.android.com/apk/res/com.fsck.k9"

    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent">
    <com.markupartist.android.widget.ActionBar android:id="@+id/actionbar" app:title="@string/app_name" style="@style/ActionBar" />
                <org.miscwidgets.widget.Panel
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/panel"
                    panel:handle="@+id/panelHandle"
                    panel:handleWrapper="@+id/panelHandleWrapper"
                    panel:content="@+id/message_list_holder"
                    panel:position="top"
                    panel:animationDuration="1000"
                    panel:linearFlying="true"
                    panel:openedHandle="@drawable/top_switcher_expanded_background"
                    panel:closedHandle="@drawable/top_switcher_collapsed_background"

                >

<LinearLayout
    android:id="@+id/message_list_holder"
android:layout_height="wrap_content"
android:layout_width="fill_parent"
android:orientation="vertical"
>
<ListView
    android:id="@+id/message_list"
    android:minHeight="2.5in"
    android:layout_height="200dp"
    android:layout_width="fill_parent"
    android:cacheColorHint="?android:attr/colorBackground"
    android:layout_weight="5"

    />
    <include layout="@layout/message_list_batch_buttons"/>
</LinearLayout>
<LinearLayout
    android:id="@+id/panelHandleWrapper"
    android:layout_height="40dip"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:baselineAligned="true"
    >
       <Button
            android:id="@+id/next"
            android:text="@string/message_view_next_action"
            android:contentDescription="@string/next_action"
            android:layout_width="80dip"
            android:layout_height="40dip"
            />
        <Button
            android:id="@+id/previous"
            android:text="@string/message_view_prev_action"
            android:contentDescription="@string/previous_action"
            android:layout_height="40dip"
            android:layout_width="80dip"
            />
        <Button android:id="@+id/panelHandle"
            android:gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="33dip"
            android:layout_weight="1"
          />
        <ImageButton
            android:id="@+id/move"
            android:layout_height="40dip"
            android:src="@drawable/ic_button_move"
            android:textSize="0dip"
            android:layout_width="80dip"
           />
        <ImageButton
            android:id="@+id/delete"
            android:layout_height="40dip"
            android:src="@drawable/ic_button_delete"
            android:textSize="0dip"
            android:layout_width="80dip"
           />
   </LinearLayout>
</org.miscwidgets.widget.Panel>
<include layout="@layout/message_view" />
</LinearLayout>
