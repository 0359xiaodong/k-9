<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:panel="http://schemas.android.com/apk/res/com.fsck.k9"
    xmlns:app="http://schemas.android.com/apk/res/com.fsck.k9"
	android:orientation="vertical">
      <ListView
	android:id="@+id/message_list"
	android:minHeight="2.5in"
	android:layout_height="200dp"
	android:layout_width="fill_parent"
	android:cacheColorHint="?android:attr/colorBackground"
	android:layout_weight="5" />
    </LinearLayout>
    <ImageView
	android:id="@+id/handle"
	android:layout_height="16dip"
	android:layout_width="fill_parent"
	android:background="@drawable/shade_handlebar" />
    <include layout="@layout/message_view" />
  </com.fsck.splitview.SplitView>
</LinearLayout>
